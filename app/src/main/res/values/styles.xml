<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateDrawable">@drawable/progress_black</item>
    </style>

    <style name="ProgressBarStyle.Alternate" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/white</item>
        <item name="android:indeterminateDrawable">@drawable/progress</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowEnterAnimation">@anim/anim_pop_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_exit</item>
    </style>

    <style name="AppTheme.Splash" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>